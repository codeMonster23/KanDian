<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width,height=device-height,initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<title>看典</title>
        <link rel="stylesheet" type="text/css" href="../css/public/public.css"/>
        <link rel="stylesheet" type="text/css" href="../css/public/header-and-footer.css"/>
        <link rel="stylesheet" type="text/css" href="../css/worksManagement/wm.css"/>
        <script src="../js/jQuery-v1.11.1.js" type="text/javascript" charset="utf-8"></script>
        <script src="../js/divSelect.js" type="text/javascript" charset="utf-8"></script>
        <script src="../js/jquery.promptToggle.js" type="text/javascript" charset="utf-8"></script>
        <script src="../js/wordLimit.js" type="text/javascript" charset="utf-8"></script>
	</head>
	<body>
         <div class="mask"></div>
        <div class="modal modal4">
            <div class="modal-header">
                <a href="" class="close"></a>
                <div class="title">分类设置</div>
            </div>
            <div class="modal-body">
                <div class="list">
                    <div class="item item1">
                        <div class="txtWrap">
                            <p>数学</p>
                           
                            
                            <div class="right clearfix">
                                <span class="icon icon-edit"></span>
                                <span class="icon icon-up"></span>
                                <span class="icon icon-down"></span>
                                <span class="icon icon-del"></span>
                            </div>
                        </div>
                        <div class="create"><input type="text"><a class="btn-save" href="javascript:;">保存</a><a href="javascript:;">取消</a></div>
                    </div>
                    <div class="item item1">
                        <div class="txtWrap">
                            <p>语文</p>
                            <div class="right clearfix">
                                <span class="icon icon-edit"></span>
                                <span class="icon icon-up"></span>
                                <span class="icon icon-down"></span>
                                <span class="icon icon-del"></span>
                            </div>
                        </div>
                        <div class="create"><input type="text"><a class="btn-save" href="javascript:;">保存</a><a href="javascript:;">取消</a></div>
                    </div>
                    <div class="item item1">
                        <div class="txtWrap">
                            <p>小学生阅读大赏</p>   
                            <div class="right clearfix">
                                <span class="icon icon-edit"></span>
                                <span class="icon icon-up"></span>
                                <span class="icon icon-down"></span>
                                <span class="icon icon-del"></span>
                            </div>
                        </div>
                        <div class="create"><input type="text"><a class="btn-save" href="javascript:;">保存</a><a href="javascript:;">取消</a></div>
                    </div>
                    <a href="javascript:;" class="createItem">+ 新建分类</a>
                </div>
            </div>  
            <div class="modal-footer">
                <a href="javascript:;" class="btn-save">保存</a>
                <a href="javascript:;" class="btn-cancel">取消</a>
            </div>
        </div>
        <!--javascript-->
        <script>
            //头部
           $(".header .dropwrap").click(function(e){
               $(this).find("ul").slideToggle(200)
               e.stopPropagation();
           })
           $(document).click(function(){
             $(".header .dropwrap ul").slideUp(200)  
            })
            //左侧高度
            var height=$(".content").height()            
            $(".sideMenu").height(height) 
            //side展开收起
            $(".sideList .nav").click(function(){
                $(this).addClass("click").siblings().removeClass("click")
                $(this).toggleClass("toggle")
                $(this).next("ul").slideToggle()
            })
             var editBtn = $('.modal4 .list .item .icon-edit');
            // 编辑
            editBtn.click(function(){
                $(this).parents('.txtWrap').hide().siblings('.create').show();
            });
            // 删除
            $('.modal4 .list .item1 .icon-del').click(function(){
              
                $(this).parents('.item1').remove();})
            
             // 新建  
            $('.createItem').click(function(){
                $(this).before('<div class="item item1"><div class="txtWrap" style="display:none"><p>一级分类<i>(1)</i></p><span class="icon icon-add"></span><span class="icon icon-edit"></span><div class="right clearfix"><span class="icon icon-up"></span><span class="icon icon-down"></span><span class="icon icon-del"></span></div></div><div class="create" style="display:block"><input type="text"><a class="btn-save" href="javascript:;">保存</a><a href="javascript:;">取消</a></div></div>');
            });

          //调用模拟下拉
        $.divselect($(".select p"),$(".select ul:not(.select2 ul)"),$(".select ul li:not(.select2 ul li)"));
        $(".tools .select p").click(function(){
            $(".lineHeight ul").hide() 
        });
        //分类下拉
        $(".handle .all").click(function(){             
            $(this).toggleClass("click")
            $(".classify").slideToggle(300)
            setTimeout(function(){height=$(".content").height()           
            $(".sideMenu").height(height)},300)
        })
        //表格隔行变色
        $("table tr:even").addClass("bg")
     // 分别设置文本属性，对齐方式，缩进的选中状态
         $(".textSet").click(function(){
             $(this).toggleClass("click")
             })
        $(".alignSet").click(function(){
             $(this).addClass("click").siblings(".alignSet").removeClass("click")
             })
       $(".sjSet").click(function(){
             $(this).addClass("click").siblings(".sjSet").removeClass("click")
             }) 
       //行距脚本
        $(".lineHeight").click(function(e){
            $(".tools ul").hide()
            $(this).addClass("click")
            $(this).find("ul").slideDown(200)
            e.stopPropagation();
            })
        $(".lineHeight li").click(function(e){
          $(this).addClass("select").siblings().removeClass("select")
          $(this).parents(".lineHeight").removeClass("click")
          $(this).parent("ul").slideUp(200)
          e.stopPropagation();
          })
        $(document).click(function(){
        $(".lineHeight").removeClass("click")
            $(".lineHeight ul").hide();})
        //radio
        $(".radios span").click(function(){
            $(this).addClass("check").siblings().removeClass("check")
        })
        </script>
        
	</body>
</html>