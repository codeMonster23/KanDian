@charset "utf-8";
html,
body {
    height: 100%;
}

.container {
    padding: 0;
    margin-top: 71px;
    height: 100%;
}

.adSettingWrap {
    margin-left: 60px;
    text-align: center;
}

.adSetting-default {
    display: inline-block;
    width: 935px;
    margin: 0 auto;
}

.adSetting-default h2 {
    margin: 172px 0 42px;
    font-size: 22px;
    color: #868585;
    font-family: MicrosoftYaHei;
}

.adSettingWrap .btn-create {
    display: block;
    width: 201px;
    height: 46px;
    line-height: 46px;
    margin-bottom: 20px;
    background-color: #4ebb50;
    border-radius: 4px;
    font-size: 22px;
    color: #ffffff;
    font-family: MicrosoftYaHei;
    text-align: center;
}

.adSetting-default .btn-create {
    width: 211px;
    height: 56px;
    line-height: 56px;
    margin: 0 auto 56px;
}

.adSetting-default .line {
    width: 935px;
    height: 1px;
    background-color: #d9d9d9;
}

.adSetting-default .tip {
    margin-top: 30px;
    font-size: 14px;
    line-height: 26px;
    color: #7c7c7c;
}

.adSetting {
    width: 1160px;
    margin: 30px 0 0 30px;
    text-align: left;
}

.adSetting .line {
    height: 1px;
    background-color: #dedede;
}

.adSetting .selectedAd-header {
    margin: 20px 0 10px;
    font-size: 14px;
    font-weight: normal;
    color: #868585;
}

.adSetting .selectedAd-body {
    position: relative;
    width: 723px;
    height: 337px;
    padding-top: 10px;
    padding-left: 10px;
    margin-bottom: 40px;
    background-color: #fff2e8;
    border: solid 1px #e46c0c;
}

.adSetting .selectedAd-info {
    position: absolute;
    bottom: 13px;
    left: 360px;
    font-size: 14px;
    line-height: 30px;
    color: #575757;
}

.adSetting .selectedAd-info label {
    display: inline-block;
    width: 70px;
}

.adSetting .selectedAd-content {
    display: inline-block;
    width: 280px;
}

.adSetting .selectedAd-btns {
    position: relative;
}

.adSetting .selectedAd-btn {
    float: left;
    width: 164px;
    height: 38px;
    line-height: 38px;
    border: solid 1px #c0c0c0;
    margin-right: 20px;
    background-color: #fff;
    border-radius: 4px;
    font-size: 16px;
    color: #303339;
    text-align: center;
}

.adSetting .selectedAd-btn-edit {
    border-color: #e46c0c;
    background-color: #e46c0c;
    color: #fff;
}

.adSetting .popover-cancel {
    position: absolute;
    right: 8px;
    top: -30px;
    width: 192px;
    height: 24px;
    line-height: 24px;
    background-color: #ffcca4;
    font-size: 12px;
    color: #353535;
    text-align: center;
}

.adSetting .popover-cancel::after {
    position: absolute;
    border-width: 5px;
    border-color: #ffcca4 transparent transparent transparent;
    border-style: solid dashed dashed dashed;
}

.adSetting .adlist-header {
    height: 36px;
    line-height: 34px;
    margin: 14px 0;
}

.adSetting .adlist-title {
    float: left;
    margin-right: 10px;
    font-size: 14px;
    font-weight: normal;
    color: #868585;
}

.adSetting .adlist-search {
    float: left;
    width: 407px;
    height: 36px;
    background-color: #ffffff;
}

.adSetting .adlist-search-input {
    float: left;
    width: 340px;
    height: 34px;
    border: solid 1px #dedede;
    border-right: 0;
    padding-left: 10px;
}

input::-moz-placeholder {
    color: #bebebe;
}

input::-webkit-input-placeholder {
    color: #bebebe;
}

.adSetting .adlist-search-btn {
    float: left;
    width: 56px;
    height: 100%;
    background-color: #00b4ff;
    font-size: 14px;
    color: #ffffff;
    text-align: center;
}

.adSetting .adlist-item {
    position: relative;
    float: left;
    width: 230px;
    height: 320px;
    padding: 10px 12px;
    margin-right: 20px;
    margin-bottom: 20px;
    background-color: #fff;
    border: solid 1px #dedede;
}

.adSetting .adlist-item-selected {
    background-color: #e9f8fe;
    border-color: #00b4ff;
}

.adSetting .adlist-item-badge {
    position: absolute;
    left: 3px;
    top: 3px;
    width: 60px;
    height: 23px;
    line-height: 23px;
    background-color: #00b4ff;
    color: #fff;
    text-align: center;
}

.adSetting .adlist-item-img {
    position: relative;
    width: 230px;
    height: 230px;
}

.adSetting .adlist-item-icons {
    position: absolute;
    right: 5px;
    bottom: 5px;
    overflow: hidden;
}

.adSetting .adlist-item-icon {
    display: inline-block;
    width: 24px;
    height: 24px;
    margin-left: 5px;
    background: url("../../images/adSetting/icon2.png");
}

.adSetting .adlist-item-icon-del {
    background-image: url("../../images/adSetting/icon3.png");
}

.adSetting .adlist-item-title {
    height: 44px;
    line-height: 22px;
    margin-bottom: 10px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    display: -moz-box;
    display: -ms-box;
    display: -o-box;
    display: box;
    -webkit-line-clamp: 2;
    -moz-line-clamp: 2;
    -ms-line-clamp: 2;
    -o-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    -moz-box-orient: vertical;
    -ms-box-orient: vertical;
    -o-box-orient: vertical;
    box-orient: vertical;
    color: #575757;
}

.adSetting .adlist-item .btn-select {
    display: block;
    width: 228px;
    height: 30px;
    line-height: 30px;
    border: solid 1px #00b4ff;
    border-radius: 4px;
    font-size: 16px;
    border: solid 1px #00b4ff;
    background-color: #fff;
    color: #00b4ff;
    text-align: center;
}

.adSetting .adlist-item-selected .btn-select {
    background-color: #00b4ff;
    color: #fff;
}